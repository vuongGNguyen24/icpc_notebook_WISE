{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CF",
            "type": "shell",
            "command": "g++ ",
            "args": [
                "-DLOCAL",
                "-O2",
                "-Wall",
                "'-Wl,--stack,268435456'",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}